# ================================
# MIST Music Platform Configuration
# ================================

# Environment: "development" or "production"
ENVIRONMENT=development

# ================================
# Server Configuration
# ================================
HOST=0.0.0.0
PORT=8000
API_BASE_URL=http://localhost:8000

# For Railway deployment, these are auto-detected:
# RAILWAY_ENVIRONMENT=production (set by Railway)
# RAILWAY_PUBLIC_DOMAIN=your-app.railway.app (set by Railway)

# ================================
# Database
# ================================
DATABASE_URL=postgresql://user:password@localhost:5432/mist_db

# For Railway, use: ${{Postgres.DATABASE_URL}}
# Railway will automatically inject this

# ================================
# AWS Configuration
# ================================
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_REGION=us-east-1
S3_BUCKET_NAME=mist-music-cdn

# ================================
# Redis (for Celery background jobs)
# ================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# For Railway, use: ${{Redis.REDIS_URL}}
# Railway will automatically inject this

# ================================
# Client URLs (Production CORS)
# ================================
# Comma-separated list of allowed origins in production
CLIENT_URLS=https://yourdomain.com,https://www.yourdomain.com

# ================================
# Security
# ================================
SECRET_KEY=change-this-to-random-string-in-production
JWT_SECRET_KEY=change-this-jwt-secret-in-production

# ================================
# Logging
# ================================
LOG_LEVEL=INFO

